---
import "the-new-css-reset";
import "@fontsource-variable/oswald";
import "@fontsource-variable/noto-sans-jp";

import CommonFooter from "@/components/CommonFooter.astro";
import Background from "@/components/background/Background";
import CommonHeader from "@/components/CommonHeader";

interface Props {
  title: string;
  description?: string;
  useMaxWidth?: boolean;
}

const { title, description, useMaxWidth = true } = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" />
    <meta
      data-n-head="ssr"
      name="viewport"
      content="width=device-width,initial-scale=1"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Background client:only="react" />
    <CommonHeader client:only="react" />
    <main class={useMaxWidth ? "use-max-width" : ""}>
      <slot />
    </main>
    <CommonFooter />
  </body>
</html>
<style is:global lang="scss">
  html {
    font-family: $font-family-noto, sans-serif;
    background: $color-background;
    width: 100%;
    font-size: 16px;
    color: var(--color-black);
    line-height: 1.8;
  }
  body {
  }
  main {
    &.use-max-width {
      max-width: var(--breakpoint-L);
    }
    margin: 0 auto;
    padding: var(--spacing-XL);
    @media screen and (max-width: $breakpoint-S) {
      padding: var(--spacing-XL) var(--spacing-L);
    }
  }
  img {
    height: auto;
  }
</style>
