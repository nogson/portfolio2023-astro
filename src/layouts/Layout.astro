---
import "the-new-css-reset";
import "@fontsource-variable/oswald";
import "@fontsource-variable/noto-sans-jp";

import GlobalNav from "@/components/GlobalNav.astro";
import CommonFooter from "@/components/CommonFooter.astro";

interface Props {
  title: string;
  description?: string;
  useMaxWidth?: boolean;
}

const { title, description, useMaxWidth = true } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <GlobalNav />
    <main class={useMaxWidth ? "use-max-width" : ""}>
      <slot />
    </main>
    <CommonFooter />
  </body>
</html>
<style is:global lang="scss">
  html {
    font-family: $font-family-noto, sans-serif;
    background: $color-background;
    width: 100%;
    font-size: 16px;
    color: var(--color-black);
    line-height: 1.8;
  }
  body {
  }
  main {
    &.use-max-width {
      max-width: var(--breakpoint-L);
    }
    margin: 0 auto;
    padding: var(--spacing-XL);
  }
  img {
    height: auto;
  }
</style>
