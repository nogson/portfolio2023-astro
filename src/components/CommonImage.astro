---
import { Image } from "@astrojs/image/components";

interface Props {
  src: string | Promise<typeof import("*.svg")> | Promise<typeof import("*.png")> | Promise<typeof import("*.jpg")> | Promise<typeof import("*.jpeg")> | Promise<typeof import("*.webp")>;
  alt: string;
  width?: number;
  height?: number;
  format?: "jpeg" | "png" | "webp";
}

const { src, alt, width, height, format } = Astro.props;
---

<Image
  src={src}
  alt={alt}
  width={width}
  format={format}
/>
